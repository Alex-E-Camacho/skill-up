  <%= link_to t.title, t %>
  <br>
<% end %>
</div>

<div class="index-second">
<h1>Fitness</h1>
<% @fit.each do |t| %>
  <%= link_to t.title, t %>
  <br>
<% end %>

<h1>Sports</h1>
<% @sport.each do |t| %>
  <%= link_to t.title, t %>
