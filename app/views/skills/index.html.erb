<h2>Skill Index</h2>
<div class='container-fluid'>
<div class='row'>
<% @skills.each do |skill| %>
  <% skill.posts.each do |post| %>
      <% if post.teach %>
      <div class="card-block col-md-4 col-xs-12">
          <div class="card-block">
             <p class="card-title">Title: <%= skill.title %></p>
              <p class="card-text">Description: <%= post.description %></p>
          </div>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
</div>
