<div class="skill-body">
  <div class="skill-new-post btn btn-link">
    <%= link_to "New Post", new_post_path(:skill_id => @skill.id) %>
  </div>

  <div class="skill-show">
    <h1>Skill:
      <%= @skill.title %></h1>
    <br>
    <div class='container-fluid'>
      <div class='row'>
      <% @skill.posts.each do |post| %>
      <div class="card-group display-of-cards">
        <div class="card col-md-3 col-xs-12 text-center card-border well">
          <div class="card-header">
            <h2 class="card-title skill-title card-img-overlay"><br><%= post.skill.category %></h4>
            <h3 class="card-title skill-title card-img-overlay"><br><%= post.skill.title %></h4>
          </div>
          <%= link_to image_tag(post.skill.img_url, :class => "card-img-top img-post", size: "256x205"), post_path(post.id) %>
          <div class="card-block">
            <p class="card-text"><%= post.description %></p>
            <%= link_to "See #{post.creator.username}'s profile", post.creator, :class => "btn btn-primary btn-block"%>
            <% if logged_in? %>
            <% if post.creator != current_user %>
            <%= form_for :apprenticeship, url: '/apprenticeships' do |f| %>
            <%= f.label "Offer: "%>
            <%= f.text_field :offer %>
            <%= f.hidden_field :requestor_id, :value => current_user.id %>
            <%= f.hidden_field :post_id, :value => post.id %>
            <%= f.submit "Send Request", class: "btn btn-primary" %>
            <% end %>
            <% end %>
            <% end %>
          </div>
        </div>



      <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
