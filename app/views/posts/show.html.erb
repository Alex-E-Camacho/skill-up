<br><br><br><br><br><br>
<div>
  <p><%= @post.description %></p>
  <p> Poster: <%= @post.creator.full_name %> </p>
</div>

<div>
  <%= link_to 'User Profile',  user_path(@post.creator) %>
</div>


<div>
  <p>
    <%= form_for :apprenticeship, url: '/apprenticeships' do |f| %>
      <%= f.label "Offer: "%>
      <%= f.text_field :offer %>
      <%= f.hidden_field :requestor_id, :value => current_user.id %>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <%= f.submit "Send a request to #{@post.creator.username}!", class: "btn btn-primary" %>
    <% end %>
  </p>
</div>

<div><br>
  <% if @post.apprenticeships.any? %>
  <% if @post.creator == current_user %>
  <h4> Current offer: </h4>
  <ul>
    <% @post.apprenticeships.each do |app| %>
    <li><p><%= app.offer %> - <strong><%= app.requestor.full_name %></strong></p></li>
    <% end %>
    <ul>
    <% end %>
  <% end %>
</div>
