<br><br><br><br><br><br><br><br>
<div class="row">
   <div class="col-md-6 col-md-offset-3">
     <%= form_for(@post) do |f| %>
     <div class="form-group">
       <span class="form-control-static">Category:&nbsp;<%= @post.skill.category %></span><br><br>
       <span class="form-control-static">Skill type: &nbsp;<%= @post.skill.title %></span>
       <%= f.hidden_field :skill_id, :value => @post.skill.id %>
     </div>
     <div class="form-group">
       <label for="">Description</label>
       <%= f.text_area :description, class: "form-control" %>
     </div>
     <div class="form-group">
       <%= f.submit "Share Your Skill!", class: "btn btn-block btn-primary"%>
     </div>
     <% end %>
   </div>
</div>
