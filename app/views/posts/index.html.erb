
<br><br><br><br><br><br><br><br><br><br>
<div class='container-fluid'>
  <div class='row'>
  <% if @posts %>
    <% @posts.each do |post| %>
    <div class="card-block col-md-4 col-xs-12">
            <%= link_to image_tag(post.skill.img_url, :class => "img-fluid", size: "320x256"), post_path(post.id) %>
        <div class="card-block">
            <h4 class="card-title"><%= post.skill.title %></h4>
            <p class="card-text"><%= post.description %></p>
            <p class="card-text"><%= post.creator.username %></p>
          </div>
      </div>
      <% end %>
      </div>
    </div>
  <% else %>
    <br><br><br><br><br>
    <h4>No results found! Try again!</h4>
  <% end %>
</div>
