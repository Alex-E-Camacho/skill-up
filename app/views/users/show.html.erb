<br><br><br><br><br><br><br>
<% if @errors %>
<%= @errors %>
<% end %>

<div class="container">
  <h1>Welcome <%= @user.first_name %>!</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="well well-sm">
        <div class="row">
          <div class="col-sm-6 col-md-8">
            <h2>
              <%= @user.username %></h2>
              <label>First Name: </label>
              <%= @user.first_name %>
              <br><br>
              <label>Last Name: </label>
              <%= @user.last_name %>
              <p><br>
                <i class="glyphicon glyphicon-envelope"></i>&nbsp;&nbsp;<%= @user.email %>
                <br /><br>
                <% if current_user.id === @user.id %>
                <%= link_to "Edit Profile", edit_user_path(@user) %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<div class="container">
  <div class="left-table">
    <table class="table">
      <thead class="thead-inverse">
        <th scope="row">Skills I have</th>
        <tr>
          <th>Title</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>

        <% @user.skills.each do |skill| %>
          <% if skill.teach %>
          <tr>
            <td><%= skill.title %></td>
            <td><%= skill.description %></td>
          </tr>
          <% end %>
        <% end %>

      </tbody>
    </table>
  </div>


<div class="right-table">
  <table class="table">
    <thead class="thead-inverse">
      <th scope="row">Skills I want to learn</th>
      <tr>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>

      <% @user.skills.each do |skill| %>
        <% if skill.teach === false %>
        <tr>
          <td><%= skill.title %></td>
          <td><%= skill.description %></td>
        </tr>
        <% end %>
      <% end %>

    </tbody>
  </table>
</div>
</div>
<br>

<div class="add-skill">
  <% if current_user.id === @user.id %>
    <h2>Add Skill</h2>
    <%= form_for @skill do |f| %>
      <%= f.label :title %>
      <br>
      <br>
      <%= f.text_field :title %>
      <br>
      <br>
      <label for="purpose">&nbsp;Purpose:</label>
      <%= f.select (:teach), class: "custom-select" do %>
        <% [['teach', true],['learn',false]].each do |c| %>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>
      <br>
      <br>
      <label for="subcategory">&nbsp;Subcategory:</label>
      <%= f.select (:subcategory_id) do %>
        <% @subcategories.each do |subcategory| %>
          <%= content_tag(:option, subcategory.title, value: subcategory.id) %>
        <% end %>
      <% end %>
      <div>
      <%= f.label :description %>
      <br>
      <br>
      <%= f.text_area :description %>
      </div>
      <%= f.submit "Add Skill", class: "btn btn-primary" %>
    <% end %>
  <% end %>
  <br><br>
</div>

<div class="container">
  <h1>Requests</h1>
  <% if @user.sender_apprenticeships.any? %>
    <% @user.sender_apprenticeships.each do |c| %>
    <br>
    <%= link_to "apprenticeship with #{c.recipient.username}", apprenticeship_messages_path(c) %>
    <% end %>
  <% end %>

  <h1>Recieved</h1>
  <% if @user.recipient_apprenticeships.any? %>
    <% @user.recipient_apprenticeships.each do |c| %>
    <br>
    <%= link_to "apprenticeship with #{c.sender.username}", apprenticeship_messages_path(c) %>
    <% end %>
  <% end %>
</div>
